<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type UserControl}" x:Key="newDBOptionsStyle" BasedOn="{StaticResource userControlGlobalTemplateStyle}">
        <Style.Resources>
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource labelGlobalTemplate}"/>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource textBoxGlobalTemplate}"/>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource buttonGlobalTemplate}"/>
        </Style.Resources>
    </Style>

    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource titleLabelGlobalTemplate}" x:Key="titleStyle"/>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource buttonGlobalTemplate}" x:Key="dbInfoOpenFolderBtnStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="4, 3, 0, 0"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Content" Value="{StaticResource openFolderIcon}"/>
    </Style>

</ResourceDictionary>